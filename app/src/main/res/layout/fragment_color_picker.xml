<?xml version="1.0" encoding="utf-8"?>
<ru.yandex.mobile_school.LockableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colors_picker_main_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/color_fragment_default_margin"
    android:layout_marginRight="@dimen/color_fragment_default_margin"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/color_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/color_fragment_title_hint"
        android:textSize="@dimen/color_fragment_title_font_size"/>

    <EditText
        android:id="@+id/color_fragment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/color_fragment_description_hint"
        android:textSize="@dimen/color_fragment_description_font_size"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/color_fragment_between_margin">
        <ru.yandex.mobile_school.ColorView
            android:id="@+id/current_color_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/color_fragment_default_margin"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/color_fragment_default_margin"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/curent_color_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/curent_color_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/curent_color_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/curent_color_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/curent_color_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/curent_color_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ru.yandex.mobile_school.LockableHorizontalScrollView
        android:orientation="horizontal"
        android:id="@+id/colors_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/color_fragment_between_margin">
        <LinearLayout
            android:id="@+id/colors_scroll_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/hue">
        </LinearLayout>
    </ru.yandex.mobile_school.LockableHorizontalScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="@dimen/color_fragment_between_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favorite_colors_title"
        android:textSize="@dimen/color_fragment_title_font_size"/>

    <HorizontalScrollView
        android:id="@+id/favorite_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/color_fragment_between_margin">
        <LinearLayout
            android:id="@+id/favorite_scroll_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>
    </LinearLayout>
</ru.yandex.mobile_school.LockableScrollView>